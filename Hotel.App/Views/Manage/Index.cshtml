@model Hotel.App.Models.ViewModels.IndexViewModel
@{
    ViewBag.Title = "Акаунт";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Променете настройките на акаунта си</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Парола:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Промяна на паролата", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Задаване на парола", "SetPassword")
            }
            ]
        </dd>
    </dl>
</div>
