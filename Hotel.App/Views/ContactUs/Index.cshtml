@using Hotel.App.Utils
<h1 class="text-center">Свържете се с нас</h1>

<div class="aboutus-wrapper row">
    <div class="contactus-element col-sm-3">
        <a href="javascript:void(0);" data-url="@Url.Action("Create", "ContactUs")" class="create-email">
            <div class="icon-wrapper"><div class="aboutus-background envelope-background"></div></div>
            <div class="text-center">ИМЕЙЛ</div>
            <div class="text-center">@XmlHelper.GetNode("LeadsEmail")</div>
        </a>
    </div>

    <div class="contactus-element col-sm-3">
        <a href="tel:@XmlHelper.GetNode("PhoneNumber")">
            <div class="icon-wrapper"><div class="aboutus-background phone-background"></div></div>
            <div class="text-center">ТЕЛЕФОН</div>
            <div class="text-center">@XmlHelper.GetNode("PhoneNumber").BeautifyPhoneNumber()</div>
        </a>
    </div>

    <div class="contactus-element col-sm-3">
        <a href="skype:@XmlHelper.GetNode("Skype")?call">
            <div class="icon-wrapper"><div class="aboutus-background skype-background"></div></div>
            <div class="text-center">СКАЙП</div>
            <div class="text-center">Обади ни се</div>
        </a>
    </div>

    <div class="contactus-element col-sm-3">
        <a href="@XmlHelper.GetNode("FacebookUrl")" target="_blank">
            <div class="icon-wrapper"><div class="aboutus-background facebook-background"></div></div>
            <div class="text-center">ФЕЙСБУК</div>
            <div class="text-center">Харесай ни</div>
        </a>
    </div>
</div>

<div class="email-form"></div>
<div class="success-email-send alert alert-success col-sm-offset-3 col-sm-6">Вашето писмо беше изпатено успешно!</div>

<div class="contactus-google-map">
    <h3 class="text-center">Ние сме тук</h3>
    <div id="map"></div>
    <script>
        function initMap() {
            var myLatLng = { lat: 43.6267589, lng: 28.5639773 };

            var map = new google.maps.Map(document.getElementById('map'), {
                zoom: 12,
                center: myLatLng,
                scrollwheel: false
            });

            var marker = new google.maps.Marker({
                position: myLatLng,
                map: map,
                title: 'Крапец Холидей'
            });
        }
    </script>
    <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCCoZHn4cE1JX7cTy1XfhK5h4rxUcI4b8c&callback=initMap">
    </script>
</div>

@Scripts.Render("~/bundles/contactus")